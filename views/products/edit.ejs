        <input class="form-control" type="number" id="packSize" name="product[packSize]" value="<%=product.packSize%>">
    </div>

    <div class="mb-3">
        <label class="form-label" for="packaging">Packaging</label>
        <input class="form-control" type="text" id="packaging" name="product[packaging]" value="<%=product.packaging%>">
    </div>


    <div class="mb-3 mt-3">
        <label class="form-label" for="hosp_packaging">Hospital Pack</label>
        <input class="form-control" type="text" id="hosp_packaging" name="product[hosp_packaging]" value="<%=product.hosp_packaging%>">
    </div>


    <div class="mb-3">
        <label class="form-label" for="shelflife" class="form-label">Minimum Shelflife at delivery (m)</label>
