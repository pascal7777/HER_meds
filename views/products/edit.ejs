    <div class="row">
        <div class="col">
            <label class="form-label" for="strength">Strength</label>
            <input class="form-control" type="text" id="strength" name="product[strength]" value="<%=product.strength%>" required>
        </div>

        <div class="col">
            <label class="form-label"  for="unit">Unit</label>
            <input class="form-control"  type="text" id="unit" name="product[unit]" value="<%=product.unit%>" required>
        </div>
    </div>

    <div class="mb-3 mt-3">
        <label class="form-label" for="formulation" class="form-label">Dosage Form</label>
        <input class="form-control" list="formulations"name="product[formulation]" id="formulation" value="<%=product.formulation%>" required> 
